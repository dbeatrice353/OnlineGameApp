

<html>
  <head>
  </head>
  <br>
  <body>
    <% if user_signed_in? %>
      <%= render "current_player_stats" %>
    <% end %>
    <%= link_to "Create a new Attempt", new_attempt_path %>
    <br><br>
    <h>Global Stats</h>
    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
        <tr>
          <td><b>Player</b></td>
          <td><b>Best Score</b></td>
          <td><b>Attempts</b></td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.user_name %></td>
            <td><%= user.max_score %></td>
            <td><%= user.attempt_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <br>
  </body>
</html>